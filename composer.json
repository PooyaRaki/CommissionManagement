{
    "name": "paysera/commission-task-skeleton",
    "description": "Financial commission management",
    "keywords": [],
    "type": "project",
    "autoload": {
        "psr-4": {
            "Sarva\\CommissionManagement\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sarva\\CommissionManagement\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.0",
        "ext-bcmath": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "friendsofphp/php-cs-fixer": "*"
    },
    "config": {
        "sort-packages": true,
        "bin-dir": "bin"
    },
    "scripts": {
        "phpunit": "phpunit",
        "fix-cs": "php-cs-fixer fix",
        "test-cs": "php-cs-fixer fix --dry-run -v",
        "test": ["phpunit tests/Service/*.php"]
    }
}
